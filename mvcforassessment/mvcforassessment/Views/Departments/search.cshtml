@model IEnumerable<mvcforassessment.Models.Department>
@{ 
    ViewData["title"] = "search";
}
<h2>search</h2>
<div class= "card card bg-light">
    <form asp-action="Search" class="form-inline" >
        <div class="form-group" >
            <select name="fieldname" class="form-control" >
                <option value="DeptId">deptid</option>
                <option value="DeptName">deptname</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" placeholder="keyword" name="keyword" id="keyword" required class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="go" class="btn btn-success" />
        </div>
    </form>
</div>
@if (Model.Count()>0)
{
    <table class="table table table-bordered">
        <thead>
            <tr>
                <th>deptid</th>
                <th>deptname</th>
            </tr>
        </thead>
        <tbody>
          
                @foreach (var item in Model)
                {
                    <tr>
                    <td>@item.DeptId</td>
                    <td>@item.DeptName</td>
                   </tr>
                }
                
           
        </tbody>
    </table>
}
