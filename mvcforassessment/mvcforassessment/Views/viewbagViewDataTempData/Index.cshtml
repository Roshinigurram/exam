        <tr>
            <th>id</th>
            <th>empname</th>
            <th> salary</th>
            <th>deptno</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in employees)
        {
            <tr>
                <th>@item.EmpId</th>
                <th> @item.EmpName</th>
