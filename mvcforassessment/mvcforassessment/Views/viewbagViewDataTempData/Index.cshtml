
@{
    ViewData["Title"] = "Index";
    var employees = (IEnumerable<mvcforassessment.Models.Employee>)ViewBag.name;
    var departments = (IEnumerable<mvcforassessment.Models.Department>)ViewData["dep1"];

}
@ViewBag.name
<h1>Index</h1>
